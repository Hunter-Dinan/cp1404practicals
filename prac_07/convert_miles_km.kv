BoxLayout:
    orientation: 'vertical'
    BoxLayout:
        orientation: 'horizontal'
        TextInput:
            id: input_number
            text: ''
            font_size: 20
            size_hint: 0.8, 1
            multiline: False
        BoxLayout:
            orientation: 'vertical'
            size_hint: 0.2, 1
            Button:
                text: 'Up'
                font_size: 20
                on_press: app.handle_increment(1)
            Button:
                text: 'Down'
                font_size: 20
                on_press: app.handle_increment(-1)
    Button:
        text: 'Convert miles to km'
        font_size: 20
        on_press: app.handle_convert_m_to_km(int(input_number.text))
    Label:
        text: app.output_label
        font_size: 30
        color: (1, 1, 0, 1)